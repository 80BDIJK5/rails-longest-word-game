<div class="container">
  <h1>Play a new game</h1>
  <h2>Here is your grid:</h2>
  <table>
    <tr>
      <th><%= @letters[0] %></th>
      <th><%= @letters[1] %></th>
      <th><%= @letters[2] %></th>
      <th><%= @letters[3] %></th>
      <th><%= @letters[4] %></th>
      <th><%= @letters[5] %></th>
      <th><%= @letters[6] %></th>
      <th><%= @letters[7] %></th>
      <th><%= @letters[8] %></th>
      <th><%= @letters[9] %></th>
    </tr>
  </table>

  <form id="input-form" action="/score" method="get">
    <input type="text" name="word" placeholder="Give me your longest word" size="50">
    <input id="button" type="submit">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>
</div>
